<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/primary_blue"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_category"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Manage Category"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Category Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_category_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_bg"
                android:paddingHorizontal="16dp"
                android:hint="Enter category name"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:inputType="textCapWords"/>

            <!-- Icon Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Choose Icon"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/icons_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/icon_work"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_gray_bg"
                        android:foreground="?attr/selectableItemBackgroundBorderless">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_folder"
                            app:tint="@color/text_secondary"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/icon_personal"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_gray_bg"
                        android:foreground="?attr/selectableItemBackgroundBorderless">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_profile"
                            app:tint="@color/text_secondary"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/icon_star"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_gray_bg"
                        android:foreground="?attr/selectableItemBackgroundBorderless">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_star"
                            app:tint="@color/text_secondary"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/icon_calendar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_gray_bg"
                        android:foreground="?attr/selectableItemBackgroundBorderless">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/text_secondary"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/icon_fire"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_gray_bg"
                        android:foreground="?attr/selectableItemBackgroundBorderless">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_fire"
                            app:tint="@color/text_secondary"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/icon_list"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_gray_bg"
                        android:foreground="?attr/selectableItemBackgroundBorderless">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_list"
                            app:tint="@color/text_secondary"/>
                    </FrameLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Color Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Choose Color"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/colors_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/color_blue"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_marker_bg"
                    android:backgroundTint="#2196F3"/>

                <View
                    android:id="@+id/color_green"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_marker_bg"
                    android:backgroundTint="#4CAF50"/>

                <View
                    android:id="@+id/color_orange"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_marker_bg"
                    android:backgroundTint="#FF9800"/>

                <View
                    android:id="@+id/color_purple"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_marker_bg"
                    android:backgroundTint="#9C27B0"/>

                <View
                    android:id="@+id/color_red"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_marker_bg"
                    android:backgroundTint="#F44336"/>

                <View
                    android:id="@+id/color_teal"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_marker_bg"
                    android:backgroundTint="#009688"/>

            </LinearLayout>

            <!-- Delete Category Button -->
            <TextView
                android:id="@+id/btn_delete_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Delete Category"
                android:textColor="#F44336"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Save"
                android:textColor="@color/primary_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
