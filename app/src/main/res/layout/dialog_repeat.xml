<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”„ Repeat Task"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"/>

    <!-- No Repeat Option -->
    <LinearLayout
        android:id="@+id/option_no_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:background="@drawable/repeat_option_bg"
        android:layout_marginBottom="8dp">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            app:tint="@color/text_secondary"/>
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No Repeat"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginStart="12dp"/>
        
        <ImageView
            android:id="@+id/check_no_repeat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/primary_blue"
            android:visibility="visible"/>
    </LinearLayout>

    <!-- Daily Option -->
    <LinearLayout
        android:id="@+id/option_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:background="@drawable/repeat_option_bg"
        android:layout_marginBottom="8dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“…"
            android:textSize="20sp"/>
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginStart="12dp"/>
        
        <ImageView
            android:id="@+id/check_daily"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/primary_blue"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Weekly Option -->
    <LinearLayout
        android:id="@+id/option_weekly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:background="@drawable/repeat_option_bg"
        android:layout_marginBottom="8dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“†"
            android:textSize="20sp"/>
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Weekly"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginStart="12dp"/>
        
        <ImageView
            android:id="@+id/check_weekly"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/primary_blue"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Monthly Option -->
    <LinearLayout
        android:id="@+id/option_monthly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:background="@drawable/repeat_option_bg"
        android:layout_marginBottom="8dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ—“ï¸"
            android:textSize="20sp"/>
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Monthly"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginStart="12dp"/>
        
        <ImageView
            android:id="@+id/check_monthly"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/primary_blue"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Yearly Option -->
    <LinearLayout
        android:id="@+id/option_yearly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:background="@drawable/repeat_option_bg"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ‚"
            android:textSize="20sp"/>
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Yearly"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginStart="12dp"/>
        
        <ImageView
            android:id="@+id/check_yearly"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/primary_blue"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textColor="@color/text_secondary"
            style="@style/Widget.Material3.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textColor="@color/primary_blue"
            style="@style/Widget.Material3.Button.TextButton"/>

    </LinearLayout>

</LinearLayout>
