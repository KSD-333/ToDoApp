<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Task Name & Category Chip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Task Name"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                app:chipBackgroundColor="@color/primary_blue"
                style="@style/Widget.MaterialComponents.Chip.Action"
                app:chipMinHeight="24dp"
                android:minHeight="24dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Details Grid -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow android:layout_marginBottom="4dp">
                <TextView
                    android:text="Completed On:"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/tv_completed_date"
                    android:text="12 Feb 2024, 10:30 AM"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </TableRow>

            <TableRow android:layout_marginBottom="4dp">
                <TextView
                    android:text="Original Due:"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/tv_due_date"
                    android:text="12 Feb 2024"
                    android:textColor="#555555"
                    android:textSize="14sp"/>
            </TableRow>
             <TableRow>
                <TextView
                    android:text="Duration:"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/tv_duration"
                    android:text="2 hours"
                    android:textColor="#555555"
                    android:visibility="gone"
                    android:textSize="14sp"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
