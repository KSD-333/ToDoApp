<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoList" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background_white</item>
        <!-- Match screenshot: white status bar + dark icons -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- White popup menu style -->
        <item name="popupMenuStyle">@style/WhitePopupMenu</item>
        <item name="android:popupMenuStyle">@style/WhitePopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/WhitePopupMenu</item>
    </style>
    
    <!-- White Popup Menu Style -->
    <style name="WhitePopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_bg</item>
    </style>

    <style name="Theme.ToDoList" parent="Base.Theme.ToDoList" />
    
    <!-- Category Chip Style - Selected -->
    <style name="ChipSelected" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/chip_all_bg</item>
        <item name="android:textColor">@color/chip_all_text</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">36dp</item>
    </style>
    
    <!-- Category Chip Style - Unselected -->
    <style name="ChipUnselected" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/chip_inactive_bg</item>
        <item name="android:textColor">@color/chip_inactive_text</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">36dp</item>
    </style>
    
    <!-- FAB Style -->
    <style name="FabStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/fab_blue</item>
        <item name="tint">@color/fab_icon</item>
        <item name="fabSize">normal</item>
    </style>
    
    <!-- Dialog Style -->
    <style name="DialogStyle" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="colorPrimary">@color/primary_blue</item>
    </style>
    
    <!-- Bottom Sheet Dialog Style -->
    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    
    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="shapeAppearance">@style/BottomSheetShapeAppearance</item>
    </style>
    
    <style name="BottomSheetShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.Fab.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.ToDoList.Splash" parent="Theme.ToDoList">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@android:color/transparent</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/background_white</item>
        <item name="android:windowBackground">@color/background_white</item>
        <item name="android:statusBarColor">@color/background_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>